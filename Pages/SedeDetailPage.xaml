<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GestionEmpleadosMaui.PageModels"
             x:DataType="vm:SedeDetailPageModel"
             x:Class="GestionEmpleadosMaui.Pages.SedeDetailPage"
             Title="Detalle de Sede">
    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Frame BackgroundColor="#1B263B" Padding="30" CornerRadius="20">
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="ðŸ“" FontSize="60" HorizontalOptions="Center"/>
                <Label Text="{Binding Sede.Ciudad}" FontSize="28" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                <Label Text="{Binding Sede.Direccion}" FontSize="18" TextColor="#D1D1D1" HorizontalOptions="Center"/>
                <Label Text="{Binding Sede.Id, StringFormat='ID de Registro: {0}'}" TextColor="Gray" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>
        <Button Text="Volver" Command="{Binding VolverCommand}" BackgroundColor="#1B263B" CornerRadius="20" WidthRequest="150"/>
    </VerticalStackLayout>
</ContentPage>