<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GestionEmpleadosMaui.Pages.SettingsPage">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Apariencia"
               FontSize="22"
               FontAttributes="Bold"/>

        <Button Text="Tema claro"
                Command="{Binding TemaClaroCommand}"/>

        <Button Text="Tema oscuro"
                Command="{Binding TemaOscuroCommand}"/>

    </VerticalStackLayout>
</ContentPage>
